# Environment Variables for SignSpeak

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_API_TOKEN=your_api_token_here
CLOUDFLARE_PAGES_URL=https://your-app.pages.dev

# Google Colab
COLAB_TUNNEL_URL=https://your-tunnel.trycloudflare.com

# API Keys (if using external services)
# OPENAI_API_KEY=your_openai_key  # If using GPT-4 instead of Cloudflare LLM

# Development
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Model Configuration
MODEL_PATH=./backend/models/sign_model.pth
ISL_CLASSES=263
ASL_CLASSES=2000

# Cloudflare Workers AI Models
WHISPER_MODEL=@cf/openai/whisper
LLAMA_MODEL=@cf/meta/llama-3.1-8b-instruct

# Feature Flags
ENABLE_FEDERATED_LEARNING=false
ENABLE_EMOTION_DETECTION=true
ENABLE_FINGERSPELLING=true
