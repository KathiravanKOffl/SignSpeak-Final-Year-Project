# Cell 4: Start Cloudflare Tunnel
print("ğŸŒ Starting Cloudflare Tunnel...")

from pycloudflared import try_cloudflare
import threading
import time

# Start tunnel in background
tunnel_url = None

def start_tunnel():
    global tunnel_url
    tunnel_url = try_cloudflare(port=8000, verbose=False)
    print(f"\nâœ… Tunnel URL: {tunnel_url.tunnel}")
    print(f"ğŸ“‹ Use this URL in your Cloudflare Pages app!")

tunnel_thread = threading.Thread(target=start_tunnel, daemon=True)
tunnel_thread.start()
time.sleep(5)  # Wait for tunnel to start

