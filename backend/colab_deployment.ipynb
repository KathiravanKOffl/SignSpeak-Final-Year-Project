"""
Keep-Alive Script
Run this cell to prevent Colab from disconnecting
"""

import time
from IPython.display import clear_output

print("â° Keep-alive running...")
print("Close this tab to stop the server")

counter = 0
while True:
    counter += 1
    clear_output(wait=True)
    print(f"â° Server running... ({counter} minutes)")
    print(f"ğŸŒ Tunnel URL: {tunnel_url.tunnel if tunnel_url else 'Starting...'}")
    print(f"ğŸ’š Colab session active")
    time.sleep(60)  # Update every minute
